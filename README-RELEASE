configure
make dist

ver=$(head -1 NEWS)
ver=${ver#v}
echo "creating ${ver} release"

sftp nneul,cracklib@frs.sourceforge.net <<EOM
cd /home/pfs/project/c/cr/cracklib/cracklib/
mkdir ${ver}
cd ${ver}
mput cracklib-${ver}.tar.gz
exit
EOM

svn copy -m "tag at ${ver}" https://svn.code.sf.net/p/cracklib/code/trunk/cracklib https://svn.code.sf.net/p/cracklib/code/tags/cracklib-${ver}

